<!-- activity_crear_parcela.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- Título de la pantalla -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREAR PARCELA:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- Campo de entrada: Nombre de la parcela -->
    <EditText
        android:id="@+id/nombre_parcela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de la parcela"
        android:layout_marginBottom="8dp"/>

    <!-- Campo de entrada: Precio por persona/noche -->
    <EditText
        android:id="@+id/precio_persona"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Precio por persona/noche"
        android:inputType="numberDecimal"
        android:layout_marginBottom="8dp"/>

    <!-- Campo de entrada: Número de ocupantes -->
    <EditText
        android:id="@+id/num_ocupantes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número de ocupantes"
        android:inputType="number"
        android:layout_marginBottom="8dp"/>

    <!-- Campo de entrada: Descripción -->
    <EditText
        android:id="@+id/descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:gravity="top"
        android:layout_marginBottom="16dp"/>

    <!-- Botón para aceptar -->
    <Button
        android:id="@+id/button_aceptar_parcela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACEPTAR"
        android:layout_marginTop="16dp"/>
</LinearLayout>
